

@using System.Text.RegularExpressions
@model ListMessageModel
@{
    ViewData["Title"] = "ReadMail";
    Layout = "~/Areas/Writer/Views/WriterLayout/Index.cshtml";
}


<div class="main-panel">
    <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title">Blog Sayfası</h3>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Bloglar</a></li>
                    <li class="breadcrumb-item active" aria-current="page"> Benim Bloglarım </li>
                </ol>
            </nav>
        </div>
        <div class="full padding_infor_info">
            <div class="mail-box">
                <div class="row">
                    <div class="col-md-3">
                        @await Component.InvokeAsync("_MailLayoutSidebarComponent")
                    </div>
                    <div class="col-md-9">


                        <div class="card card-primary card-outline">

                            <div class="card-header">
                                <h3 class="btn-group">Mail Detay</h3>

                                <ul class="unstyled inbox-pagination">

                                    <div class="unstyled inbox-pagination" style="display: inline-block; float: right;">
                                        <a class="np-btn" href="#"><i class="mdi mdi-arrow-left-bold  pagination-left"></i></a>
                                        <a class="np-btn" href="#"><i class="mdi mdi-arrow-right-bold pagination-right"></i></a>
                                    </div>
                                </ul>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body p-2">
                                <div class="mailbox-read-info border-bottom py-2">
                                    <h5>@Model.MailSubject</h5>
                                    <h6>
                                        From: @Model.SenderEmail
                                        <span class="mailbox-read-time float-right">@Model.MailDate.ToString("dd-MMM-yyyyy") @Model.MailTime.ToString("hh\\:mm") PM</span>
                                    </h6>
                                </div>
                                <!-- /.mailbox-read-info -->
                                <div class="mailbox-controls with-border text-center border-bottom py-2">
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-default btn-sm" data-toggle="tooltip" data-container="body" title="Delete">
                                            <i class="mdi mdi-delete"></i>
                                        </button>
                                        <button type="button" class="btn btn-default btn-sm" data-toggle="tooltip" data-container="body" title="Reply">
                                            <i class="mdi mdi-reply"></i>
                                        </button>
                                        <button type="button" class="btn btn-default btn-sm" data-toggle="tooltip" data-container="body" title="Forward">
                                            <i class="mdi mdi-share"></i>
                                        </button>
                                    </div>
                                    <!-- /.btn-group -->
                                    <button type="button" class="btn btn-default btn-sm" data-toggle="tooltip" title="Print">
                                        <i class="mdi mdi-printer"></i>
                                    </button>
                                </div>
                                <!-- /.mailbox-controls -->
                                <div class="mailbox-read-message mt-3">
                                    @Html.Raw(@Model.MailContent)
                                </div>
                                <!-- /.mailbox-read-message -->
                            </div>
                            <!-- /.card-body -->
                            <div class="card-footer bg-white"></div>
                            <!-- /.card-footer -->
                            <div class="card-footer mt-3">
                                <div class="float-right">
                                    <button type="button" class="btn btn-default"><i class="mdi mdi-reply"></i> Reply</button>
                                    <button type="button" class="btn btn-default"><i class="mdi mdi-share"></i> Forward</button>
                                </div>
                                <button type="button" class="btn btn-default"><i class="mdi mdi-delete"></i> Delete</button>
                                <button type="button" class="btn btn-default"><i class="mdi mdi-printer"></i> Print</button>
                            </div>
                            <!-- /.card-footer -->
                            <!-- /.card -->

                        <!-- /.card -->

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
