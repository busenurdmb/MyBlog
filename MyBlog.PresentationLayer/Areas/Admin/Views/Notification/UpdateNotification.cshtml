


@model ﻿Notification
@{
    ViewData["Title"] = "UpdateNotification";
    Layout = "~/Areas/Writer/Views/WriterLayout/Index.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title">Bildirim Güncelleme Paneli</h3>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Bildirimler</a></li>
                    <li class="breadcrumb-item active" aria-current="page"> Güncelle
                </ol>
            </nav>
        </div>
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Bildirim Güncelleme Paneli</h4>
                        <p class="card-description">Aşağıdaki Alanları Boş Geçmeyin</p>
                          <form method="post">
                        <div class="form-group">
                            @Html.HiddenFor(x => x.NotificationId)
                            <label> Açıklama</label>
                            @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })

                            <label>icon</label>
 <input type="text" asp-for="NotificationIcon" class="form-control" />

                                <span class="text-danger">mdi mdi-information formatında</span>
                                <br />
                                <label>İcon Rengi</label>
                                <input type="text" asp-for="IconCirleColor" class="form-control" />

                              
                                <span class="text-danger">text-primary formatında</span>
                      </div>
                        <button type="submit" class="btn btn-primary">Güncelle</button>
                    </form>
                    </div>
                </div>
            </div>

        </div>
    </div>

</div>


