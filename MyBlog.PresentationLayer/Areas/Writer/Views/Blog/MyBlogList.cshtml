@model ﻿List<Article>
@{
    ViewData["Title"] = "MyBlogList";
    Layout = "~/Areas/Writer/Views/WriterLayout/Index.cshtml";
}




<div class="main-panel">
    <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title">Blog Sayfası</h3>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Bloglar</a></li>
                    <li class="breadcrumb-item active" aria-current="page"> Benim Bloglarım </li>
                </ol>
            </nav>
        </div>
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Blog Listesi</h4>
                        <p class="card-description">
                            Yazmış olduğunuz bloglarla ilgili işlemleri aşağıdaki panelden gerçekleştirebilirsiniz.
                        </p>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Başlık</th>
                                        <th>Kategori</th>
                                        <th>Tarih</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach(var item in Model)
                                    {
                                        <tr>
                                            <td>@item.ArticleId</td>
                                            <td>@item.Title</td>
                                            <td>@item.Category.CategoryName</td>
                                            <td>@item.CreatedDate.ToString("dd-MMM-yyyy")</td>
                                            <td>
                                                <a href="/Writer/Blog/DeleteBlog/@item.ArticleId" class="btn btn-danger ">
                                        <span class="icon text-white">
                                            <i class="mdi mdi-close-circle"></i>
                                        </span>
                                        <span class="text">Sil</span>
                                    </a></td>
                                       <td>
                                                <a href="/Writer/Blog/UpdateBlog/@item.ArticleId" class="btn btn-success ">
                                        <span class="icon text-white">
                                            <i class="mdi mdi-lead-pencil"></i>
                                        </span>
                                        <span class="text">Güncelle</span>
                                    </a></td>
                                     <td>
                                                <a href="/Writer/Blog/CreateTagBlog/@item.ArticleId" class="btn btn-info">
                                        <span class="icon text-white">
                                            <i class="mdi mdi-plus-circle"></i>
                                        </span>
                                        <span class="text">Tag Ekle</span>
                                    </a></td>
                                           
                                        </tr>
                                    }
                                    

                                </tbody>
                            </table>
                            <a href="/Writer/Blog/CreateBlog" class="btn btn-info">Yeni Blog Girişi</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

