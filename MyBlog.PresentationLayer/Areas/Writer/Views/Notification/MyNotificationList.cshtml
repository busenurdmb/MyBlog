

@model ﻿List<Notification>
@{
    ViewData["Title"] = "MyNotificationList";
    Layout = "~/Areas/Writer/Views/WriterLayout/Index.cshtml";
}





<div class="main-panel">
    <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title">Bildirimler</h3>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Bildirimler</a></li>
                    <li class="breadcrumb-item active" aria-current="page"> Bildirim Listesi </li>
                </ol>
            </nav>
        </div>
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Bildirim Listesi</h4>
                        <p class="card-description">
                           Adminin Oluşturmus Olduğu Bildirimler.
                        </p>
                        <div class="table-responsive">
                             <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th>*</th>
                                <th>Bildirim Açıklaması</th>
                                <th>Durumu</th>
                                
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><a href="#">@item.NotificationId</a></td>
                                    <td>@item.Description</td>

                                    @if (item.IsRead == "true")
                                    {
                                        <td>
                                            <a href="/AdminNotification/StatusChangeNotification/@item.NotificationId" >
                                                
                                                <span class="text badge badge-primary">Aktif</span>
                                            </a>
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            <a href="/Admin/Notification/UpdateNotification/StatusChangeNotification/@item.NotificationId">
                                               
                                                <span class="text badge badge-dark">Pasif </span>
                                            </a>
                                        </td>
                                    }
                                     
                                   
                                </tr>
                            }


                        </tbody>
                    </table>
                           
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>





