@model List<Comment>
<div class="single-post__comment">
    <div class="widget__title">
        @if (ViewBag.count == 0)
        {
            <h4>Henüz yorum yok</h4>
        }
        else
        {
           <h4> @ViewBag.count Yorum</h4> 
        }
        
    </div>
    @foreach (var item in Model)
    {
           <div class="single-post__comment__item">
        <div class="single-post__comment__item__pic">
            <img src="@item.AppUser.İmageUrl" alt="">
        </div>
        <div class="single-post__comment__item__text">
            <h5>@item.AppUser.Name @item.AppUser.SurName</h5>
            <span>@DateTime.Now.ToString("dd-MMM-yyyy")</span>
            <p>
               @item.Description
            </p>
           
        </div>
    </div>
    }

   
</div>

