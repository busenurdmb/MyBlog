@model List<Notification>
<li class="nav-item dropdown">
    <a class="nav-link count-indicator dropdown-toggle" id="notificationDropdown" href="#" data-toggle="dropdown">
        <i class="mdi mdi-bell-outline"></i>
        <span class="count count-varient1">7</span>
    </a>
    <div class="dropdown-menu navbar-dropdown navbar-dropdown-large preview-list" aria-labelledby="notificationDropdown">
        <h6 class="p-3 mb-0">Bildirimler</h6>
        @foreach (var item in Model)
        {
          <a class="dropdown-item preview-item">
            <div class="preview-thumbnail">
                    <div class="mr-3" >
                        <div class="@item.IconCirleColor" >
                            <i class="@item.NotificationIcon" style="font-size: 35px;"></i>
                    </div>
                </div>
            </div>
            <div class="preview-item-content">
                <p class="mb-0">
                        @item.Description.Substring(0,10) 
                </p>
                    <p class="text-small text-muted align-self-start"> @(((DateTime)item.Date).ToString("dd.MM.yyyy")) </p>
            </div>
        </a>  
        }
        
        
        <div class="dropdown-divider"></div>
    </div>
</li>
