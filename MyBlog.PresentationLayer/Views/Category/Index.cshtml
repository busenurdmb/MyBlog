@model List<MyBlog.EntityLayer.Concrete.Category>
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container">
    <br /> <br />
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Kategori Adı</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
       <tbody>
           @foreach (var item in Model)
            {
          <tr>
            <td>@item.CategoryId</td>
                    <td>@item.CategoryName</td>
                    <td><a href="/Category/DeleteCategory/@item.CategoryId" class=" btn btn-outline-danger">sil</a></td>
                    <td><a href="#" class=" btn btn-outline-success">güncelle</a></td>
        </tr>
            }
       </tbody>
    </table>
    <a href="/Category/CreateCategory" class="btn btn-outline-primary">Ekle</a>
</div>
